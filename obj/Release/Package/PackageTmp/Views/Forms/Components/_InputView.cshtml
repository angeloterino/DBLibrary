@model StrawmanApp.Models.FormUtilModel.InputModel
@if (Model.type != StrawmanApp.Models.FormUtilModel.InputTypes.HIDDEN)
{
    if (Model.label != null) { Html.LabelFor(m => Model, Model.label, null); }

    @Html.TextBoxFor(m => Model.id, new { @class = "form-control", @Value = string.IsNullOrEmpty(Model.defalut_value)? "" : Model.defalut_value })   

}else{
    
    @Html.HiddenFor(m => Model.id, new { @Value = Model.defalut_value == null ? "" : Model.defalut_value });
}