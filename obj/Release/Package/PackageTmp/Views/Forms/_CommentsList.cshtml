@model StrawmanApp.Entities.CommentsModel
<ul class="component-list">
    @if(Model.type == StrawmanApp.Entities.CommentTypes.MANAGEMENT_LETTER){
        <li>
            @Html.DisplayFor(m => Model.master_group_label) 
        </li><li>
            @Html.DropDownListFor(m => m.master_group_selected, Model.master_group_list, new { select_id = "main-group", select_type = "groups-update", select_url = "UpdateCommentsGroups", select_target = "select-groups", select_main_group = "channel-group", select_controller_type = Model.type })
        </li>
        <li>
            @Html.DisplayFor(m => Model.channel_label)
        </li><li>
            @Html.DropDownListFor(m => m.channel_selected, Model.channel_list, new { select_id = "channel-group", select_type = "groups-update", select_url = "UpdateCommentsGroups", select_target = "select-groups", select_main_group = "main-group", select_controller_type = Model.type })
        </li>
        <li>
            @Html.DisplayFor(m => Model.group_label)
        </li><li>
            @Html.DropDownListFor(m => m.group_selected, Model.group_list, new { select_id = "select-groups", select_type = "groups-update", select_url = "UpdateComments", select_target = "comment-text", select_controller_type = Model.type })
        </li>
    }
    else if (Model.type == StrawmanApp.Entities.CommentTypes.MONTHLY_COMMENTS)
    {
        <li>
            @Html.DisplayFor(m => Model.channel_label)
        </li><li>
            @Html.DropDownListFor(m => m.channel_selected, Model.channel_list, new { select_id = "channel-group", select_type = "groups-update", select_url = "UpdateCommentsGroups", select_target = "select-groups", select_main_group = "main-group", select_controller_type = Model.type })
        </li>
        <li>
            @Html.DisplayFor(m => Model.group_label)
        </li><li>
            @Html.DropDownListFor(m => m.group_selected, Model.group_list, new { select_id = "select-groups", select_type = "groups-update", select_url = "UpdateComments", select_target = "comment-text", select_controller_type = Model.type })
        </li>
    }
</ul>
<div class="clear" style="clear:both"></div>