@model StrawmanApp.Models.ChartGenericModel
@{
    string _class, _v = "", _n = "", _s = "";
    decimal _c, _jj;
    StrawmanApp.Models.ChartGenericModel item = Model;
    <td data-type="growth">
    @if (item._grouth_c != null && item._grouth_jj != null)
    {
        _v = ""; _n = ""; _s = "margin-top: 6%; margin-left: 2%; float: left;";
        _c = (decimal)item._grouth_c;
        _jj = (decimal)item._grouth_jj;
        if (_c < 0) { _v = "margin-left:2%;float: right !important;"; _n = "margin:0;text-align:right;"; _s = "margin-top: 6%;"; }
        <div class="pc" style="@_n"><div style="background-color:rgb(0,204,255);width:@Html.DisplayFor(m => item._grouth_c_pc).ToString().Replace(',', '.');float:left; height:30px;@_v"></div><span style="@_s">@Html.DisplayFor(m => item._grouth_c)</span></div>

        _v = ""; _n = ""; _s = "margin-top: 6%; margin-left: 2%; float: left;";
        if (_jj > _c) { _class = "positive"; }
        else { _class = "negative"; }
        if (_jj < 0) { _v = "margin-left:2%;float: right !important;"; _n = "margin:0;text-align:right;"; _s = "margin-top: 6%;"; }
            
        <div class="pc" style="clear:both;@_n"><div class="@_class" style="background-color:rgb(0,204,255);width:@Html.DisplayFor(m => item._grouth_jj_pc).ToString().Replace(',', '.');float:left; height:30px;@_v"></div><span style="@_s">@Html.DisplayFor(m => item._grouth_jj)</span></div>
    }
    </td>
}