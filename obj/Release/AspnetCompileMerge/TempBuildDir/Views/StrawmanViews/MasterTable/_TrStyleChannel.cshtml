@using StrawmanApp.Helpers;
@{
    var _style = ViewData["_style"] == null ? "" : ViewData["_style"].ToString();
    int _channel = int.Parse(ViewData["channel"].ToString());
    var _style_t = "";
    if(!_style.Contains("background-color"))
    {
        if(!_style.Contains("color"))
        {
            _style_t = "color:" + StrawmanConstants.Colors.White + ";";
            if (_channel == 9) { _style_t = "color:" + StrawmanConstants.Colors.White + ";"; }
            if (_channel == 999999) { _style_t = "color:" + StrawmanConstants.Colors.Black + ";"; }
        }
        var _style_b = "background-color:" + StrawmanConstants.Colors.Red + ";";
        if (_channel == 9) { _style_b = "background-color: " + StrawmanConstants.Colors.MediumBlue + ";"; }
        if (_channel == 999999) { _style_b = "background-color: "+ StrawmanConstants.Colors.Green +";"; }
        _style_t += _style_b;
    }
    _style += _style_t;
}
style = "@_style"