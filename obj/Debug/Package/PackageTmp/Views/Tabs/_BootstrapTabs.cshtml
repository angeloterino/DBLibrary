@model List<StrawmanApp.Models.TabItem>

@{
    <div class="scroller scroller-left"><i class="glyphicon glyphicon-chevron-left"></i></div>
    <div class="scroller scroller-right"><i class="glyphicon glyphicon-chevron-right"></i></div>
    <div class="tabs wrapper" data-target=".master.wrapper">
        <ul class="nav nav-tabs">

        @foreach( StrawmanApp.Models.TabItem tab in Model)
        {
            string _active = (tab.select_default == "true")? "class=\"active\"":"";
            <li @Html.Raw(_active)><a data-type="group_types" data-target=".master.wrapper" data-value="@tab.tab_url" data-controller="@tab.url">@tab.title</a></li>
        }

        </ul>
    </div>
}