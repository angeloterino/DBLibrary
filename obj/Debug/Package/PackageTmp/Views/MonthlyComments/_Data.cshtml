@model List<StrawmanApp.Entities.MonthlyCommentsModel>
@{
    string _RED = StrawmanApp.Helpers.StrawmanConstants.Colors.Red;
    string _GREEN = StrawmanApp.Helpers.StrawmanConstants.Colors.Green;
    string style_color;
    string buttom_color;
<table class="table" style="display:table;text-align:center;">
<tbody>
    <tr class="table-row" style="display:table-row;font-weight:bold;">
        <td colspan= "2" rowspan="2" class="table-cell" style="display:table-cell">&nbsp;</td>
        <td colspan="4" class="table-cell" style="display:table-cell;">
            @ViewBag.MonthTitle
        </td>
        <td class="table-cell" style="display:table-cell; width:20px;">&nbsp;</td>
        <td colspan="4" class="table-cell" style="display:table-cell;">
            @ViewBag.YTDTitle
        </td>
    </tr>
    <tr style="font-weight:bold;">        
        <td class="table-cell" style="display:table-cell;width:80px;">Market Growth</td>
        <td class="table-cell" style="display:table-cell;width:80px;">Brand Growth</td>
        <td class="table-cell" style="display:table-cell;width:80px;">Market Share</td>
        <td class="table-cell" style="display:table-cell;width:80px;">Pt +/-</td>
        <td class="table-cell" style="display:table-cell;">&nbsp;</td>
        <td class="table-cell" style="display:table-cell;width:80px;">Market Growth</td>
        <td class="table-cell" style="display:table-cell;width:80px;">Brand Growth</td>
        <td class="table-cell" style="display:table-cell;width:80px;">Market Share</td>
        <td class="table-cell" style="display:table-cell;width:80px;">Pt +/-</td>
    </tr>    
@foreach (StrawmanApp.Entities.MonthlyCommentsModel item in Model)
{
    buttom_color = "";
    style_color = "";
    if (Model.IndexOf(item) != Model.Count -1){
        buttom_color = "border-bottom-color: transparent";
    }
    <tr class="table-row" style="display:table-row">
        <td class="table-cell" style="display:table-cell; font-weight:bold;width:280px;text-align:right;@buttom_color">@Html.DisplayFor(m=>item.name)</td>
        <td class="table-cell" style="display:table-cell; width:45px;">&nbsp;</td>
        <td class="table-cell" style="display:table-cell">@Html.DisplayFor(m=>item.month_market_growth)</td>
        <td class="table-cell" style="display:table-cell;">@Html.DisplayFor(m=>item.month_brand_growth)</td>
        <td class="table-cell" style="display:table-cell;">@Html.DisplayFor(m=>item.month_market_share)</td>
        @if (item.month_pt != null)
        {
            style_color = "color:" + ((item.month_pt < 0) ? _RED : _GREEN);
        }
        <td class="table-cell" style="display:table-cell;@style_color">@Html.DisplayFor(m=>item.month_pt)</td>
        <td class="table-cell" style="display:table-cell;">&nbsp;</td>
        <td class="table-cell" style="display:table-cell">@Html.DisplayFor(m=>item.ytd_market_growth)</td>
        <td class="table-cell" style="display:table-cell;">@Html.DisplayFor(m=>item.ytd_brand_growth)</td>
        <td class="table-cell" style="display:table-cell;">@Html.DisplayFor(m=>item.ytd_market_share)</td>
        @if (item.ytd_pt != null)
        {
            style_color = "color:" + ((item.ytd_pt < 0) ? _RED : _GREEN);
        }
        <td class="table-cell" style="display:table-cell;@style_color">@Html.DisplayFor(m=>item.ytd_pt)</td>
    </tr>
}
</tbody>
</table>
}