@model List<StrawmanApp.Models.BOYFormModel>

@{
    using (Ajax.BeginForm("UpdateBoy", "Forms", new AjaxOptions { HttpMethod = "Post", OnSuccess = "UpdateBOYSuccess", OnFailure = "UpdateBOYFailure", OnBegin = "SubmitForm" }, new { form_id = "ActiveForm" }))
    {    
    <div style="width: 100%; height: 42px; box-shadow: 0px 1px 3px rgb(180,180,180); background-color: rgb(246, 246, 246);">

        <div style="float:left">
            @{Html.RenderAction("GetButtonsGroup", "FormUtil", new { channel = ViewBag.Channel });}
        </div>
        <div style="float:right"> 
            <a class="btn btn-default" btn-type="reset-form" style="margin: 5px;font-size: small;border: 1px solid #ccc;">Cancelar</a>
            <input type="submit" class="btn btn-default disabled" style="margin: 5px;font-size: small;border: 1px solid #ccc;" value="Guardar cambios" />
        <div style="clear:both"></div>
        </div>
    </div>
    <div class="form-boy-wrapper" style="top: 45px; width: 100%; bottom: 0px; overflow: scroll; position: absolute;">    
        @foreach (StrawmanApp.Models.BOYFormModel item_ in Model)
        {

            if (item_.INT != null || item_.BTG != null || item_.PBP != null)
            {
                string partView = item_.model == null ? "~/Views/Forms/_BOYTable.cshtml" : "~/Views/Forms/_BOYEdit.cshtml";
        <div style="margin:10px auto;width:1024px;position:relative;" class="form-boy wrapper">
            @{Html.RenderPartial(partView, item_);}
        </div>
        <div class="clear" style="clear:both"></div>
            }
        }
    </div>
    }

    
}