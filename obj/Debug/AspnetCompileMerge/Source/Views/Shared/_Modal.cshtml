<div class="comments modal fade in" data-type="modal" data-template="default" data-name="@ViewData["modal_name"]" data-backdrop ="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content wrapper">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="@ViewBag.ModalId">@ViewBag.ModalTitle</h4>
            </div>
            <div class="modal-nav"></div>
            <div class="clear-fix"></div>
            <div class="modal-body"></div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>
