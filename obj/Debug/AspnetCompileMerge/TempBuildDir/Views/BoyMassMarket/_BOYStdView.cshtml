@model StrawmanApp.Models.BoyMassMarketModels
@{
    string nname;
    string _style = "";
    string _yellow = StrawmanApp.Helpers.StrawmanConstants.Colors.Yellow;
    string _red = StrawmanApp.Helpers.StrawmanConstants.Colors.Red;
    string _white = StrawmanApp.Helpers.StrawmanConstants.Colors.White;
    string _darkblue = StrawmanApp.Helpers.StrawmanConstants.Colors.DarkBlue;
    StrawmanApp.Models.BoyMassMarketModels item = (StrawmanApp.Models.BoyMassMarketModels)Model;
    StrawmanApp.Models.BoyMassMarketModels yitemaux = (StrawmanApp.Models.BoyMassMarketModels)ViewData["yitemaux"];
    nname = yitemaux.boy_name;
    bool _market = (bool)(item!=null && item.market_col1 != null);
    bool _share = (bool)(item != null && item.share_col1 != null);
    bool _sellout = (bool)(item != null && item.sellout_col1 != null);
    bool _sellin = (bool)(item != null && item.sellin_col1 != null);
    bool _rate = (bool)(item != null && item.conversion_rate1 != null ||item != null && item.conversion_rate != null);
    _style = (item != null && item.brand > 9000 && item.market > 9000) ? "background-color:" + _red + ";color:" + _white + ";font-weight:bold;" : "";
    string[] _header = (string[])ViewData["header"];
    <div style="margin: 5px;" data-type="data_wrapper" >
    <table class="table grid-table boytable boy_name" style="height: 55px; font-size: 13px;@_style">
        <thead>
        <tr >
        <th  style="width:33%;">@_header[0]</th>
        <th  style="width:33%;">@_header[1]</th>
        <th  style="width:33%;">@_header[2]</th>
        </tr>
        </thead>
    </table> 
    @if (_market)
    {
    <table class="table grid-table boytable market">
        <tbody>
        <tr class="grid-row" >
            <td class="grid-cell" style="width:33%;" data-type ="amount" data-value="@item.market_col1">@Html.DisplayFor(m => item.market_col1)</td>
            <td class="grid-cell" style="width:33%;" data-type ="amount" data-value="@item.market_col2">@Html.DisplayFor(m => item.market_col2)</td>
            <td class="grid-cell" style="width:33%;" data-type ="pc" data-value="@item.market_pc">@Html.DisplayFor(m => item.market_pc)</td>
        </tr>
        </tbody>
    </table>
    }
    <table class="table grid-table boytable">
        <tbody>
        @if (_share)
        {
        <tr class="grid-row share">
            <td class="grid-cell" style="width:33%;" data-type ="pc" data-value="@item.share_col1">@Html.DisplayFor(m => item.share_col1)</td>
            <td class="grid-cell" style="width:33%;" data-type ="pc" data-value="@item.share_col2">@Html.DisplayFor(m => item.share_col2)</td>
            <td class="grid-cell" style="width:33%;" data-type ="pc" data-value="@item.share_pc">@Html.DisplayFor(m => item.share_pc)</td>
        </tr>
        }
        @if (_sellout)
        {
        <tr class="grid-row sellout">
            <td class="grid-cell" style="width:33%;" data-type ="amount" data-value="@item.sellout_col1">@Html.DisplayFor(m => item.sellout_col1)</td>
            <td class="grid-cell" style="width:33%;" data-type ="amount" data-value="@item.sellout_col2">@Html.DisplayFor(m => item.sellout_col2)</td>
            <td class="grid-cell" style="width:33%;" data-type ="pc" data-value="@item.sellout_pc">@Html.DisplayFor(m => item.sellout_pc)</td>
        </tr>  
        }
        @if (_sellin)
        {
        <tr class="grid-row sellin">
            <td class="grid-cell" style="width:33%;" data-type ="amount" data-value="@item.sellin_col1">@Html.DisplayFor(m => item.sellin_col1)</td>
            <td class="grid-cell" style="width:33%;" data-type ="amount" data-value="@item.sellin_col2">@Html.DisplayFor(m => item.sellin_col2)</td>
            <td class="grid-cell" style="width:33%;" data-type ="pc" data-value="@item.sellin_pc">@Html.DisplayFor(m => item.sellin_pc)</td>
        </tr>  
        }
        </tbody>
    </table>
        @if (_rate)
        {
        <table class="table grid-table boytable" style="font-size: 12px;"><tbody>
        <tr class="grid-row">
            <td class="grid-cell" style="width:33%;" data-type ="pc" data-value="@item.conversion_rate1">@Html.DisplayFor(m => item.conversion_rate1)</td>
            <td class="grid-cell" style="width:33%;" data-type ="pc" data-value="@item.conversion_rate2">@Html.DisplayFor(m => item.conversion_rate2)</td>
            <td class="grid-cell" style="width:33%;">&nbsp;</td>
        </tr>
        </tbody>
        </table>    
        }
    </div>     
}