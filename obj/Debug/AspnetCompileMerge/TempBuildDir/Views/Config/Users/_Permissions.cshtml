@model StrawmanApp.Models.UsersManageModel
<div class="tab-content">
     <div class="tab-pane fade active in" id="menu_access">
    @{
        using (Ajax.BeginForm("UpdateMenuAccess", new AjaxOptions { HttpMethod = "Post", OnSuccess = "UpdateSuccess", OnFailure = "UpdateFailure" }))
        {
            Html.RenderPartial("Users/_MenuAccess", Model.MenuAccess);
            <div class="config-wrapper float-right">
                <button type="submit" class="btn btn-success" value="Save" id="SaveUserMenuAccess"><li class="fa fa-save"></li></button>
            </div>
            @Html.HiddenFor(m => Model.user);
        }
    }
    </div>
    <div class="tab-pane fade" id="editable_views_access">
        <div class="form-group">
            @Html.LabelFor(m => Model.ViewTable)
            @Html.DropDownListFor(m => Model.ViewTable, new SelectList(Model.ViewsList, "Value", "Text"), new { @class = "form-control" })
        </div>
    @{Html.RenderPartial("Users/_ChannelsTabs");}
    @{Html.RenderPartial("Users/_ViewAccessForm", Model);}
    </div>
</div>