@model StrawmanApp.Entities.PeriodUtilModel

@{
    Layout = "~/Views/Shared/_StrwLayout.cshtml";
}
<div class="wrapper" style="width:100%;height:100%; padding-top:15%">
<div class="panel panel-default form-wrapper">
@using (Ajax.BeginForm("ChangePeriod", null, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "UpdateSuccess('" + ViewBag.SuccessMessage + "')", OnFailure = "UpdateFailure('" + ViewBag.FailMessage + "')", OnBegin = "OnSubmiting" }, new { enctype = "multipart/form-data" }))
{
<div>@ViewBag.Message</div>
<div style="margin:20px;">
<!--List Month Period-->
@Html.Label(Model.month_text, new { @style = "display:inline-block", @class="col-lg-2" })
<div class="col-lg-4" style="display:inline-block">@Html.DropDownListFor(m => m.selected_month_period, Model.month_list, null, new { @style = "width:100%;" })</div>
@Html.Label(Model.year_text, new { @style = "display:inline-block", @class = "col-lg-2" })
<div class="col-lg-4" style="display:inline-block"> @Html.DropDownListFor(m => m.selected_year_period, Model.year_list, null, new { @style = "width:100%;" })</div>
<!--List Year Period -->
</div>
<div class="sumbit">
    <div class="clear" style="clear:both;"></div>
    <div style="margin: 10px 0; bottom: 6px; float: left; position: absolute;">
        <div class="message" data-type="ajax-msg" style="font-size:1em;"></div>
    </div>
    <div class="btn-group float-right" style="margin:10px;"> <input type ="submit" value="@ViewBag.SubmitText" class="btn btn-default" /></div>
    <div class="clear" style="clear:both;"></div>
</div>
}
</div>
</div>