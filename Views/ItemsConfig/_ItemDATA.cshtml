@model StrawmanApp.Models.ItemsConfigModel
@using StrawmanApp.Helpers
@{
    StrawmanApp.Models.ItemsConfigModel item = (StrawmanApp.Models.ItemsConfigModel)Model;
    <tr>
            <td>@item.market_description</td>
            <td>@item.brand_description</td>
            <td style="text-align:right;">@item.market_month</td>
            <td style="text-align:right;">@item.brand_month</td>
            <td>@item.nts_name</td>
            <td style="text-align:right;">@item.nts_amount</td>
        <td>@Html.ActionLink(MessageByLanguage.Edit, "ShowItemCaracts", new { _market = item.market, _brand = item.brand, _channel = item.channel }, new { @class = "btn btn-default" })</td>
    </tr>
}