@model StrawmanApp.Entities.CommentsModel
@{    
    Layout = "~/Views/Shared/_StrwLayout.cshtml";
}
@using (Ajax.BeginForm("UpdateComment", new AjaxOptions
{
    HttpMethod = "POST"
 ,
    OnSuccess = "UpdateCommentSuccess('" + StrawmanApp.Helpers.Messages.Success("Comentario") + "')"
 ,
    OnFailure = "UpdateCommentFailure('" + StrawmanApp.Helpers.Messages.Failure("Comentario") + "')"
}))
{
<div class="wrapper">
    <div class="wrapper select panel panel-default">
        @{Html.RenderPartial("~/Views/Forms/_CommentsList.cshtml", Model);}
    </div>    
    <div class="wrapper text">
        @Html.TextAreaFor(m => m.text, new { rows = "12", @class = "panel panel-default", select_id = "comment-text"})
    </div>
    <div class="wrapper sumbit">
        @Html.HiddenFor(m => Model.letter_id)
        @Html.HiddenFor(m => Model.user)
        @Html.HiddenFor(m => Model.type)
        @Html.HiddenFor(m => Model.id)
        <div class ="message float-left"></div> 
        <input type="submit" class="btn btn-default float-right" value="@ViewBag.BtnSubmitText" />
        <input type="button" class="btn btn-default float-right" value="@ViewBag.BtnDeleteText" btn-type ="btn-delete" />
        <div style="clear:both;"></div>
    </div>
    
</div>
}       