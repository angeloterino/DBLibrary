@model StrawmanApp.Models.Navigator
@{string _default = "active";}
<ul class="nav nav-pills">
    @foreach (SelectListItem item in Model.content)
    {
        string _href = "#" + (item.Text.Contains(' ') ? item.Text.Substring(0, item.Text.IndexOf(' ')).ToLower() : item.Text);
        if (!string.IsNullOrEmpty(_default)) { _default = " class=\"active\"";}
        <li @Html.Raw(_default)><a href="@_href" data-type="@Model.data.type" data-value="@item.Value" data-toggle="pill">@item.Text</a></li>
        _default = null;
    }
</ul>
